
<div class="card">

  <div>
  <h2>Add A New Influencer:</h2>
    
    <form action="/users/{{userId}}/influencer" method="POST">
      <div class="form-input">
        <label for="name">Name: </label>
        <input type="text" name="name" required>
      </div>

      <div class="form-input">
        <label for="instragram">Instagram:</label>
        <input type="text" name="instagram">
      </div>

      <div class="form-input">
        <label for="location">Location:</label>
        <input type="text" name="location">
      </div>

      <div class="form-input">
        <label for="photoUrl">PhotoUrl:</label>
        <input type="text" name="photoUrl">
      </div>

      <div class="button-container flex-end">
        <input class="button primary" type="submit" value="Create Influencer">
        <button class="buttonwarning ">
        <a href="/users/{{userId}}" >Cancel</a>

        </button>
      </div>
    </form>
  </div>
</div>

