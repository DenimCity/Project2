<div>
 <a href="/users/{{userId}}">
<button class="backBtn">Back</button>
  </a>
</div>


<div class="UserOptionContainer">
  <h1>Meet: {{user.firstName}} {{user.lastName}}</h1>
  <div>

    <div class="functionContainer">

      <div class="functions">
        <a href="/users/{{user._id}}/edit">Edit</a>
      </div>
      <button  onclick="myFunction()" class="functions">
        <a href="/users/{{user._id}}/delete">Delete</a>
      </button>
      <div class="functions">
        <a href="/users/{{user._id}}/influencer">
        <div>View More</div></a>
      </div>

    </div>
  </div>
</div>


<div class="user-container">
  <div>
    {{#if user.photoUrl}}
    <img src="{{user.photoUrl}}" alt="{{user.username}}'s profile photo"> {{else}}
    <img src="https://picsum.photos/200/300" alt="{{user.username}}'s profile photo"> {{/if}}
  </div>
  <div class="user-info">
      <div>Username: 
        <strong>{{user.username}}</strong>
      </div>
      <div>instagram:
        
        <strong>{{user.Userinstagram}}</strong>
      </div>
      <div>twitter: 
      
        <strong>{{user.twitter}}</strong>
      </div>
      <div>Currently living in: 
    
        <strong>{{user.location}}</strong>
      </div>
      <div>What is fashion?: 
        <strong>{{user.description}}</strong>
      </div>
      <div>Whats your motto?: 
    
        <strong>{{user.motto}}</strong>
      </div>
  </div>
</div>



