{
    "extends": [
        "airbnb-base",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "rules": {
        "comma-dangle": ["error", "only-multiline"],
        "indent": [ "error", 4 ],
        "max-len": ["error", { "code": 140 }],
        "object-shorthand": 0,
        "prefer-destructuring": [
            "error", {
                "array": false,
                "object": false
            },
            {
                "enforceForRenamedProperties": false
            }
        ],
        "template-curly-spacing": [ "error", "always" ]
    },
    "env": {
        "mocha": true
    }
}
