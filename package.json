{
  "name": "project2",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "server": "node index.js",
    "backend": "nodemon index.js",
    "dev": "NODE_ENV=DEV concurrently  --kill-others-on-fail \"nodemon index.js\" \"npm run client\"",
    "start": "NODE_ENV=PRODUCTION concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "lint": "./node_modules/.bin/eslint --ext js,jsx --max-warnings 0 .",
    "client": "cd ./client  && npm run start"
  },
  "proxy": {
    "/api": {
      "target": "http://localhost:5000",
      "changeOrigin": true
    }
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "concurrently": "^4.1.0",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.5",
    "dotenv": "^4.0.0",
    "esm": "^3.2.22",
    "express": "^4.16.4",
    "log4js": "^4.1.0",
    "method-override": "^2.3.10",
    "mongoose": "^5.0.0-rc2",
    "serve-favicon": "~2.4.5"
  },
  "devDependencies": {
    "eslint": "^5.14.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-html": "^5.0.3",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.3.0",
    "nodemon": "^1.18.11",
    "prettier": "^1.16.4"
  }
}
